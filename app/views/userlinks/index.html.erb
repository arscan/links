<%= form_for :userlink, html: {:class => "well"} do |f| %>
            <%= f.text_field :url, placeholder: "http://", class: "input-block-level"  %>
            <div class="starthidden">
                <%= f.text_field :name, value: "Loading", class: "input-block-level"%>
                <%= f.text_area :summary, placeholder: "Summary", class: "input-block-level", rows: "5" %>
                <%= f.text_field :tag_list, placeholder: "tags", class: "input-block-level"%>
                <%= f.submit class: "btn", value: "Save"%>
            </div>
<% end %>
<% @userlinks.each do |userlink| %>
    


<% end %>
<div>
    <% @userlinks.each do |userlink| %>
        <div>
            <div>
                <%= link_to userlink.name, userlink.url %> 
                (domain.com)
            </div>
            <div>
                <ul class="inline">
                    <li><%= userlink.shorturl %></li>
                    <li>
                    <%= raw userlink.tag_list.map {|t| link_to t, tag_path(t) }.join(',') %>
                    </li>
                    <!--
                <td><%= link_to 'Show', userlink %></td>
                <td><%= link_to 'Edit', edit_userlink_path(userlink) %></td>
                <td><%= link_to 'Destroy', userlink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                -->
            </ul>
        </div>
    </div>

    <% end %>
</div>
<div class="text-center">
    <%= will_paginate @userlinks, renderer: BootstrapPagination::Rails %>
</div>
